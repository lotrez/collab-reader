# Application Configuration
NODE_ENV=development
PORT=3000

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=collab_reader
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL for Drizzle ORM
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/collab_reader

# MinIO S3-compatible Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=collab-reader

# MinIO Access Configuration (for application)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=collab-reader
S3_REGION=us-east-1

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

BETTER_AUTH_SECRET=secret
BETTER_AUTH_URL=http://localhost:3000